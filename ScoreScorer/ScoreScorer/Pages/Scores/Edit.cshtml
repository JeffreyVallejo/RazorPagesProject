@page
@model ScoreScorer.Pages.Scores.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ScoreRate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScoreRate.ID" />
            <div class="form-group">
                <label asp-for="ScoreRate.Name" class="control-label"></label>
                <input asp-for="ScoreRate.Name" class="form-control" />
                <span asp-validation-for="ScoreRate.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScoreRate.Rank" class="control-label"></label>
                <input asp-for="ScoreRate.Rank" class="form-control" />
                <span asp-validation-for="ScoreRate.Rank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScoreRate.LikeDescription" class="control-label"></label>
                <input asp-for="ScoreRate.LikeDescription" class="form-control" />
                <span asp-validation-for="ScoreRate.LikeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScoreRate.DislikeDescription" class="control-label"></label>
                <input asp-for="ScoreRate.DislikeDescription" class="form-control" />
                <span asp-validation-for="ScoreRate.DislikeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
