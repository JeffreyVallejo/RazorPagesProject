@page "{searchString?}"
@model ScoreScorer.Pages.Scores.IndexModel

@{ ViewData["Title"] = "Index"; }

<h1>Rated Scores</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Scores[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scores[0].Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scores[0].LikeDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scores[0].DislikeDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Scores)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rank)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LikeDescription)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DislikeDescription)
    </td>
    <td>
        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
